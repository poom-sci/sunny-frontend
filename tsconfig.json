{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "public/*": ["./public/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx","**/*.css", ".next/types/**/*.ts", "src/pages/404.tsx", "src/components/homepage/Introduction.tsx", "src/pages/api/test.js"],
  "exclude": ["node_modules"]
}
